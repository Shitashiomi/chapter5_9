<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image2.jpg" %>

          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

        <div class="row">
          <% if user_signed_in? && @user == current_user %>
             <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% end %>
        </div>

        <h2>New book</h2>
          <%= form_for(@book) do |f| %>
            <div class="field row">
              <lavel>Title</lavel>
                <%= f.text_field :title, class: "col-xs-12" %>
            </div>
            <div class="action row">
              <lavel>Body</lavel>
              <%= f.text_area :body, class: "col-xs-12" %>
            </div>
            <%= f.submit 'Create Book', class: "btn btn-primary btn btn-block" %>
           <% end %>
      </div>

      <div class="col-xs-9">
        <h1>Books</h1>
          <table>
            <% @books.each do |book| %>
              <% if book.user == @user %>
                <tr>
                  <td><%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image3.jpg" %><br>
                    <%= book.user.name %>
                    <% end %></td>
                  <td><%= link_to book.title, book_path(book) %></td>
                  <td><%= book.body %></td>
                </tr>
             <% end %>
           <% end %>
          </table>
        </div>
      </div>
    </div>
   </div>

