<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image2.jpg" %>

          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @book.user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @book.user.introduction %></th>
              </tr>
            </tbody>
          </table>

        <div class="row">
          <% if user_signed_in? && @user == current_user %>
             <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% end %>
        </div>

        <h2>New book</h2>
          <%= form_for(@booknew) do |f| %>
            <div class="field row">
              <lavel>Title</lavel>
                <%= f.text_field :title, class: "col-xs-12" %>
            </div>
            <div class="action row">
              <lavel>Body</lavel>
              <%= f.text_area :body, class: "col-xs-12" %>
            </div>
            <%= f.submit 'Create Book', class: "btn btn-primary btn btn-block" %>
           <% end %>
      </div>

      <div class="col-xs-9">
        <h1>Book detail</h1>
          <table>
                <tr><td><%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image3.jpg" %><br>
                    <%= @book.user.name %>
                    <% end %></td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                  <%if @book.user.id == current_user.id %>
                   <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-info col-xs-10 col-xs-offset-1" %></td>
                   <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: "本当に消してもよろしいでしょうか？" }, class: "btn-sm btn-danger col-xs-offset-1" %></td>
                   <% end %>
               </tr>
          </table>
        </div>
      </div>
    </div>
   </div>


